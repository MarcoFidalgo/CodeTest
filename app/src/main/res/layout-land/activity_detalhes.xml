<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetalhesActivity"
    android:orientation="horizontal">


    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5">
        <ImageView
        android:id="@+id/det_imagemCidade"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#cecece"
        android:scaleType="centerCrop"/>
        <TextView
            android:id="@+id/det_nome_cidade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textSize="40sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:text="Carregando, aguarde..."
            android:layout_gravity="bottom|left"
            android:gravity="left"
            android:paddingVertical="10dp"
            android:layout_marginBottom="10dp"
            android:paddingLeft="10dp"/>
    </FrameLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="5"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="5dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.3"
            android:text="@string/condicoes_atuais"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:textSize="16sp"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:fillViewport="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#ffffff">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight=".6"
                        android:layout_height="match_parent"
                        android:text="@string/lv_descricao"
                        android:gravity="center_vertical"
                        android:textSize="16sp"/>
                    <TextView
                        android:id="@+id/det_descricao"
                        android:layout_width="0dp"
                        android:layout_weight=".3"
                        android:layout_height="match_parent"
                        android:text="@string/lv_descricao"
                        android:gravity="center"
                        android:textSize="16sp"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/gradiente_vert_preto_fade_branco"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight=".6"
                        android:layout_height="match_parent"
                        android:text="@string/lv_temp"
                        android:gravity="center_vertical"
                        android:textSize="16sp"/>
                    <TextView
                        android:id="@+id/det_temp"
                        android:layout_width="0dp"
                        android:layout_weight=".3"
                        android:layout_height="match_parent"
                        android:text="@string/lv_temp"
                        android:gravity="center"
                        android:textSize="16sp"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/gradiente_vert_preto_fade_branco"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight=".6"
                        android:layout_height="match_parent"
                        android:text="@string/lv_temp_sentida"
                        android:gravity="center_vertical"
                        android:textSize="16sp"/>
                    <TextView
                        android:id="@+id/det_temp_sentida"
                        android:layout_width="0dp"
                        android:layout_weight=".3"
                        android:layout_height="match_parent"
                        android:text="@string/lv_temp_sentida"
                        android:gravity="center"
                        android:textSize="16sp"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/gradiente_vert_preto_fade_branco"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight=".6"
                        android:layout_height="match_parent"
                        android:text="@string/lv_pressao_atm"
                        android:gravity="center_vertical"
                        android:textSize="16sp"/>
                    <TextView
                        android:id="@+id/det_pressao_atm"
                        android:layout_width="0dp"
                        android:layout_weight=".3"
                        android:layout_height="match_parent"
                        android:text="@string/lv_pressao_atm"
                        android:gravity="center"
                        android:textSize="16sp"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/gradiente_vert_preto_fade_branco"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight=".6"
                        android:layout_height="match_parent"
                        android:text="@string/lv_vento"
                        android:gravity="center_vertical"
                        android:textSize="16sp"/>
                    <TextView
                        android:id="@+id/det_vento"
                        android:layout_width="0dp"
                        android:layout_weight=".3"
                        android:layout_height="match_parent"
                        android:text="@string/condicoes_atuais"
                        android:gravity="center"
                        android:textSize="16sp"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/gradiente_vert_preto_fade_branco"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight=".6"
                        android:layout_height="match_parent"
                        android:text="@string/lv_humidade"
                        android:gravity="center_vertical"
                        android:textSize="16sp"/>
                    <TextView
                        android:id="@+id/det_humidade"
                        android:layout_width="0dp"
                        android:layout_weight=".3"
                        android:layout_height="match_parent"
                        android:text="@string/lv_humidade"
                        android:gravity="center"
                        android:textSize="16sp"/>
                </LinearLayout>
            </LinearLayout>

        </ScrollView>
    </LinearLayout>




</LinearLayout>